extends layouts/main

block content
    .form-container
        form(action=routes.editProfile, method="post")
            label(for="avatar") Avatar
            input(type="file", id="avatar", name="avatar")
            input(type="text", id="Nick name", name="nick name", placeholder="변경할 닉네임을 입력하시오.")
            input(type="email", id="Email", name="email", placeholder="변경할 이메일을 입력하십시오")
            input(type="submit", value="Update Profile")
        a.form-container__link(href=`/user/change-password`) 비밀번호 변경